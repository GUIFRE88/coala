<%= link_to "Nova Tarefa", new_project_task_path(@project), class:"btn-task-new" %>
<br>
<section class="container flex flex-wrap">
    <% if @project.tasks.size > 0 %>
        <% @tasks.each do |task| %>
        <div class="painel-task">
            <div class="painel-nome-task">
                <%= task.name %>
            </div>
            <p class="camp-task">Data Inicial: <%= task.dttini.strftime("%d/%m/%Y") %></p>
            <p class="camp-task">Data Final: <%= task.dttfim.strftime("%d/%m/%Y")  %></p>
            <p class="camp-task">Finalizado: <%= task.finish %></p>
        </div>
        <% end %>
    <% else %>
        <div class="jumbotron">
            <h3>NÃ£o existe Tarefas</h3>
        </div>
    <% end %>
</section>
<br>
<%= link_to 'Voltar', project_path(@project), class:"btn btn-default" %>
