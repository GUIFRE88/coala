<div class="container">
    <% if @project.tasks.size > 0 %>
        <% @tasks.each do |task| %>
        <div class="container">
            <div class="jumbotron">
                <ul>
                    <li>
                        <p class="form-group">
                            Nome: <%= task.name %>
                        </p>
                        <p class="form-group">
                            Data Inicial: <%= task.dttini %>
                        </p>
                        <p class="form-group">
                            Data Final: <%= task.dttfim %>
                        </p>
                        <p class="form-group">
                            Finalizada? <%= task.finish %>
                        </p>
                    </li>
                </ul>
            </div>
        </div>
         <% end %>
    <% else %>
        <div class="jumbotron">
            <h3>NÃ£o existe Tarefas</h3>
        </div>
    <% end %>
    <%= link_to "Nova Tarefa", new_project_task_path(@project), class:"btn btn-success" %>
    <%= link_to 'Voltar', project_path(@project), class:"btn btn-default" %>
</div>